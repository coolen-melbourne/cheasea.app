<script>
document.addEventListener('DOMContentLoaded', () => {
  const flashes = document.querySelectorAll('.flash-alert');

  flashes.forEach(flash => {
    setTimeout(() => {
      flash.classList.remove('opacity-0', 'scale-95');
      flash.classList.add('opacity-100', 'scale-100');
    }, 100);

    setTimeout(() => {
      flash.classList.add('opacity-0', 'scale-95');
      flash.classList.remove('opacity-100', 'scale-100');
    }, 4000);
  });
});

function closeFlash(btn) {
  const flash = btn.closest('.flash-alert');
  if (flash) {
    flash.classList.add('opacity-0', 'scale-95');
    flash.classList.remove('opacity-100', 'scale-100');
  }
}
</script>






